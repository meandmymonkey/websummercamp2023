{% extends 'base.html.twig' %}

{% block body %}
    <table class="mx-auto">
        <thead>
            <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                {% set role_name = user.admin ? 'admin' : 'user' %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td><a href="#">{{ user.email }}</a></td>
                    <td><span class="badge {{ role_name }}">{{ role_name }}</span></td>
                    <td><a href="#">Edit</a> | <a href="#" class="delete">Delete</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
